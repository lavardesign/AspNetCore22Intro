        @Model.Title
    </div>
    <div class="card-body">
        <p class="card-text">@Model.Genre</p>
        <a asp-action="Details" asp-route-id="@Model.Id">Details</a>
        <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
    </div>
</div>
